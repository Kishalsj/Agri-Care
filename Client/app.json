{
  "expo": {
    "name": "Agri-Care",
    "slug": "Agri-Care",
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "myapp",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to take pictures.",
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby services.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library."
      }
    },
    "android": {
      "package": "com.agricare.app",
      "versionCode": 1,
      "permissions": ["CAMERA", "ACCESS_FINE_LOCATION", "READ_EXTERNAL_STORAGE"]
    },
    "experimental": {
      "newArchEnabled": true
    }
  }
}